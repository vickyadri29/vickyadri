---
import myPhoto from "../../assets/images/me.png";
import email from "../../assets/icons/social-media/gmail-light.svg";
import twitter from "../../assets/icons/social-media/twitter.svg";
---

<section
  id="contact"
  class="bg-gradient-to-br from-[#091318] to-[#060D11] flex justify-center items-center min-h-screen"
>
  <div class="max-w-7xl m-auto px-5 flex flex-col justify-between md:gap-0 gap-10 text-[#E2FBFF]">
    <div class="flex flex-col justify-between md:gap-20 gap-12 md:my-16 my-2">
      <h2 class="md:text-5xl text-2xl md:font-bold font-semibold">ðŸ‘‹ Let's get connected!</h2>
      <div class="flex flex-col md:gap-8 gap-5">
        <h1 class="md:text-[82px] text-4xl font-bold md:leading-[100px] xl:leading-none">
          Do you have any project ideas?
        </h1>
        <h1 class="md:text-[82px] text-4xl font-bold md:leading-[100px] xl:leading-none">
          Feel free to get in touch! ðŸ˜‰
        </h1>
      </div>
    </div>

    <div class="flex flex-col gap-7">
      <div class="max-w-2xl">
        <h3 class="md:text-[24px] text-lg md:font-semibold md:leading-9">
          I'm prepared to engage in a discussion and bring a positive contribution to your projects.
        </h3>
      </div>
      <div class="flex md:flex-row flex-col md:items-center gap-5">
        <img
          src={myPhoto}
          alt="vickyadrii"
          decoding="async"
          loading="lazy"
          class="md:w-40 w-24 rounded-2xl shadow-[0px_1px_5px_0px_#000]"
        />
        <div class="flex flex-col gap-4">
          <h3 class="md:text-[24px] text-lg font-semibold">Contact me on:</h3>
          <div class="flex flex-col gap-1.5">
            <div class="flex items-center gap-2.5">
              <img src={email} alt="gmail" decoding="async" loading="lazy" class="w-5" />
              <p class="md:text-xl">vickyadri103@gmail.com</p>
            </div>
            <div class="h-[2px] bg-[#E2FBFF] md:w-auto w-64"></div>
            <button id="twitter-btn" class="flex items-end gap-2.5">
              <img src={twitter} alt="linkedin" decoding="async" loading="lazy" class="w-5" />
              <p class="md:text-xl mt-1">@vickyadrii_</p>
            </button>
          </div>
        </div>
      </div>
    </div>

    <div class="md:mt-28 md:max-w-7xl max-w-xs mb-5">
      <span class="md:text-lg text-sm md:font-medium"> Â© 2023, by Vicky Herdiansyah Adri</span>
    </div>
  </div>
</section>
<script>
  const twitterButton: HTMLElement = document.getElementById("twitter-btn")!;

  twitterButton.addEventListener("click", () => {
    window.location.href = "https://x.com/vickyadrii_";
  });
</script>
